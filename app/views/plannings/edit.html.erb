<div class="wrapper">
  <!-- Sidebar -->
  <%= render "dashboards/sidebar" %>

  <!-- Page Content -->
  <div id="content" class="dashboard-content">

    <!-- Header -->
    <div class="header-dashboard">
      <div>
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info btn-header">
              <i class="fas fa-align-left"></i>
            </button>
          </div>
        </nav>
      </div>
      <div class="container mt-5 pl-lg-5">
        <div class="row">
          <div class="col-lg-7 col-md-10">
            <h1 class="title-header text-white">Editer le planning <%= @planning.title %></h1>
            <p class="text-white mt-0 mb-5">Bienvenue sur votre page d'édition. Ici, vous pourrez mettre à jour les informations du planning <%= @planning.title %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="container mt-n7">
      <div class="row">
        <div class="col-xl-12 mb-3">
          <%= render partial: 'form_edit', locals: { planning: @planning } %>
        </div>
      </div>
    </div>

  </div>
</div>


<script>
  $(document).ready(function () {

    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
    });

});
</script>
