<div class="wrapper">
  <!-- Sidebar -->
  <%= render "dashboards/sidebar" %>

  <!-- Page Content -->
  <div id="content" class="dashboard-content">

    <!-- Header -->
    <div class="header-dashboard">
      <div>
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info btn-header">
              <i class="fas fa-align-left"></i>
            </button>
          </div>
        </nav>
      </div>
      <div class="container mt-5 pl-lg-5">
        <div class="row">
          <div class="col-lg-7 col-md-10">
            <h1 class="title-header text-white">Ajouter vos plannings</h1>
            <p class="text-white mt-0 mb-5">Bienvenue sur votre page d'ajout de planning. Vous pouvez ajouter ou éditer les plannings horaires de l'établissement (Format IMG/PNG)</p>
          </div>
        </div>
      </div>


       <div class="container pb-5">
        <div class="card bg-secondary">
          <div class="card-header bg-white border-0">
            <div class="card-header-title">
              <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i> Selectionner des photos
            </div>
          </div>
          <div class="card-body">
            <%= simple_form_for [@planning], url: plannings_path do |f| %>
            <span class="label-info">Nom de votre planning</span>
            <div class="pl-lg-4 mt-4 mb-4">
              <%= f.input :title, placeholder: "Titre du planning", input_html: { autocomplete: "Nom du coach", class: "form-control-alternative" } %>
            </div>

            <span class="label-info">Ajouter votre planning</span>
            <div class="pl-lg-4 mt-4 mb-4">
              <div class="file-drop-area">
                <span class="fake-btn">Select. fichier</span>
                <span class="file-msg">ou glisser et déposer votre planning</span>
                <%= f.input :plan_img, type: :file, wrapper: false, input_html: { class: "file-input" }, label: false %>
              </div>
            </div>

              <%= f.submit "Ajouter le planning", class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Courses table -->
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <div class="card shadow mb-4">
            <div class="card-header border-0 d-flex flex-row justify-content-between">
              <div class="card-header-title">Tous mes plannings</div>
              <%= link_to "Page des plannings", planning_cours_fitandco_path, class: "btn btn-sm btn-success" %>
            </div>
            <div class="table-responsive">
              <table class="table aligns-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Nom du planning</th>
                    <th scope="col" class="text-center">Photo</th>
                    <th scope="col" class="text-center">Editer</th>
                    <th scope="col" class="text-center">Supprimer</th>
                  </tr>
                </thead>
                <tbody id="plannings">
                  <%= render 'plannings_list' %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal New Coach -->
<%= render partial: 'form', locals: { planning: @planning } %>

<script>
  $(document).ready(function () {

    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
    });

});
</script>
