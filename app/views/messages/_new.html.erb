<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content modal-form bg-secondary">
      <div class="modal-header modal-form-header bg-white">
        <h5 class="modal-title modal-header-title" id="exampleModalCenterTitle">Demande de scéance d'essai Fit & Co</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= simple_form_for [@message], url: create_message_url do |f| %>
        <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>
      <span class="label-info">Informations</span>
      <div class="pl-lg-4 mt-4 mb-4">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <%= f.input :first_name, placeholder: 'Prénom', input_html: { autocomplete: "title", class: "form-control-alternative" } %>
          </div>
          <div class="col-sm-12 col-md-6">
            <%= f.input :last_name, placeholder: 'Nom', input_html: { autocomplete: "subtitle", class: "form-control-alternative" } %>
          </div>
        </div>
      </div>
      <span class="label-info">Vos coordonnées</span>
      <div class="pl-lg-4 mt-4 mb-4">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <%= f.input :phone, placeholder: 'Téléphone', input_html: { autocomplete: "title", class: "form-control-alternative" } %>
          </div>
          <div class="col-sm-12 col-md-6">
            <%= f.input :email, placeholder: 'Email', input_html: { autocomplete: "subtitle", class: "form-control-alternative" } %>
          </div>
        </div>
      </div>
      <span class="label-info">Vos coordonnées</span>
      <div class="pl-lg-4 mt-4 mb-4">
        <%= f.text_area :question, placeholder: 'Question', class: "form-control-text" %>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
        <%= f.submit "Envoyer", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
