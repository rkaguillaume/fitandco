<div class="wrapper">
  <!-- Sidebar -->
  <%= render "dashboards/sidebar" %>

  <!-- Page Content -->
  <div id="content" class="dashboard-content">

    <!-- Header -->
    <div class="header-dashboard">
      <div>
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info btn-header">
              <i class="fas fa-align-left"></i>
            </button>
          </div>
        </nav>
      </div>
      <div class="container mt-5 pl-lg-5">
        <div class="row">
          <div class="col-lg-7 col-md-10">
            <h1 class="title-header text-white">Ajouter vos cours</h1>
            <p class="text-white mt-0 mb-5">Bienvenue sur votre page d'ajout de cours. Vous pouvez ajouter ou Ã©diter des informations de vos cours ici</p>
          </div>
        </div>
      </div>

      <div class="container pb-5">
        <div class="card bg-secondary">
          <div class="card-header bg-white border-0">
            <div class="card-header-title">
              <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i> Selectionner des photos
            </div>
          </div>
          <div class="card-body">
            <%= simple_form_for [@course] do |f| %>
            <span class="label-info">Description du cours</span>

              <%= f.input :title, placeholder: "title", input_html: { autocomplete: "title", class: "form-control-alternative" } %>

              <%= f.input :subtitle, placeholder: "Subtitle", input_html: { autocomplete: "subtitle", class: "form-control-alternative" } %>

              <%= f.text_area :description, placeholder: "description", class: "form-control-text" %>

              <%= f.submit "Ajouter le cours", class: "btn btn-success" %>

            <% end %>

          </div>
        </div>
      </div>

    </div>

    <!-- Courses table -->
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <div class="card shadow mb-3">
            <div class="card-header border-0 d-flex flex-row justify-content-between">
              <div class="card-header-title">Tous mes cours</div>
              <%= link_to "Page des cours", cours_fitandco_path, class: "btn btn-sm btn-success" %>
            </div>
            <div class="table-responsive">
              <table class="table aligns-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Sous-titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Photos</th>
                    <th scope="col" class="text-center">Modifier</th>
                    <th scope="col" class="text-center">Supprimer</th>
                  </tr>
                </thead>
                <tbody id="courses">
                  <%= render 'courses_list' %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal New Course-->
<%= render partial: 'form', locals: { course: @course } %>


<script>
  $(document).ready(function () {

    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
    });

});
</script>
