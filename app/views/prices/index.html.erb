<div class="wrapper">
  <!-- Sidebar -->
  <%= render "dashboards/sidebar" %>

  <!-- Page Content -->
  <div id="content" class="dashboard-content">

    <!-- Header -->
    <div class="header-dashboard">
      <div>
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info btn-header">
              <i class="fas fa-align-left"></i>
            </button>
          </div>
        </nav>
      </div>
      <div class="container mt-5 pl-lg-5">
        <div class="row">
          <div class="col-lg-7 col-md-10">
            <h1 class="title-header text-white">Ajouter vos abonnements</h1>
            <p class="text-white mt-0 mb-5">Bienvenue sur votre page d'ajout dd'abonnements. Vous pouvez ajouter ou éditer les différents abonnements de votre établissement</p>
            <button type="button" class="btn btn-info btn-header" data-toggle="modal" data-target="#formPrice">
              Ajouter un abonnement
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Courses table -->
    <div class="container mt-n7">
      <div class="row">
        <div class="col">
          <div class="card shadow mb-4">
            <div class="card-header border-0 d-flex flex-row justify-content-between">
              <div class="card-header-title">Tous mes abonnements</div>
              <%= link_to "Page des abonnements", nos_abonnements_path, class: "btn btn-sm btn-success" %>
            </div>
            <div class="table-responsive">
              <table class="table aligns-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Tarif</th>
                    <th scope="col">Durée</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Modification</th>
                    <th scope="col" class="text-center">Supprimer</th>
                  </tr>
                </thead>
                <tbody id="prices">
                  <%= render 'prices_list' %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal New Price -->
<%= render partial: 'form', locals: { price: @price } %>

<script>
  $(document).ready(function () {

    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
    });

});
</script>
